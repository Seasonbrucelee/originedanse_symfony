{% extends 'originedanse.html.twig' %}

{% block title %}{{ post.title}}{% endblock %}

{% block body %}
<article>
    <div class="container">
        <img src="{{ post.image }}" alt="" style="width: 100%" "height: 50%">
        <!--<img src="{#{{ asset('originedanse/images/rize.jpg') }}#}" class="rize" alt="affiche film rize">-->
        <h2>{{ post.title }}</h2>
        <p>{{ post.content | raw}}</p><br><hr>
       
         <p> Rédigé par {{ post.user.email }} 
                - publié {{ post.createdAt | ago}} 
                - Classé dans {{ post.category.name }}</p>
    </div>
    </article>
{% endblock %}
