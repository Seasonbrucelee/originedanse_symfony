{% extends 'sbadmin.html.twig' %}

{% block title %}{{ post.title}}{% endblock %}

{% block body %}

    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7 post-content">
                <img src="{{ post.image }}" alt="" style="width: 100%">
                <p>{{ post.content | raw}}</p><br><hr>
            
                <p> Rédigé par {{ post.user.email }} 
                        - publié {{ post.createdAt | ago}} 
                        - Classé dans {{ post.category.name }}
                </p>
            <a href="{{ path('admin_post_index') }}" class="btn btn-primary">Retour à la liste des articles</a>
            </div>
        </div>
    </div>
{% endblock %}
